
<div class="container" style="margin-top: 60px;">
  <div class="col-md-4">
  </div>
  <div class="col-md-4">
    <h1>New Gallery</h1>
    <%= form_for :gallery, url: {action: "create"}, html: {:multipart => true} do |f| %>
      <p>
        <%= f.label 'Name:' %><br/>
        <%= f.text_field :name, class: "form-control" %>
      </p>
      <p>
        <%= f.label 'Set-id:' %><br/>
        <%= f.text_field :setid, class: "form-control" %>  
      </p>
      <p>
        <%= f.label 'Description:' %><br/>
        <%= f.text_area :description, rows: 10, class: "form-control" %>  
      </p>
      <p>
        <%= f.file_field :photo %>
      </p>
      <!--<p>
        <%= f.file_field :photo %>
      </p>-->
      <p>
        <%= f.submit 'Create', class: "btn btn-success" %>&nbsp;&nbsp;&nbsp;
        <%= f.submit 'Clear Form', class: "btn btn-default", :type => 'reset' %>
      </p>
    <% end %>
  </div>
  <div class="col-md-4">
  </div>
</div>