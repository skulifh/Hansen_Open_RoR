
<div class="container" style="margin-top: 60px;">
  <div class="col-md-12">
    <table class="tablesorter table table-hover"  id="user_list">
      <thead class="table-header fixedHeader">
        <tr colspan="8">
        <th>Nafn</th>
        <th>Notendanafn</th>
        <th>Stjórnandi</th>
        </tr>
      </thead>


      <tbody id="operationlist" class="scrollContent">
      <% @users.each do |user| %>

        <tr>
          <td style="width:auto;"><%=user.fullname%></td>
          <td style="width:auto;"><%=user.username%></td>
          <% if user.admin %>
            <td style="width:auto;"><%= button_to "Já", user_remove_admin_path(:user_id => user.id), {method: :put, class: "btn btn-primary"} %></td>
          <% else %>
            <td style="width:auto;"><%= button_to "Nei", user_add_admin_path(:user_id => user.id), {method: :put, class: "btn btn-default"} %></td>
          <% end %>

        </tr>

      <% end %>
      </tbody>
    </table>
<%= button_to "Nýr notandi", signup_path, {method: :get, class: "btn btn-success"} %>

  </div>
</div>